<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ffe0e0e0">

    <TextView
            android:id="@+id/friends_moments"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Friends Moments"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="#fff"/>

    <TextView android:layout_width="wrap_content" android:layout_height="2dp"/>

    <TextView
            android:id="@+id/my_moments"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="My Moments"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="#fff"/>

    <TextView android:layout_width="wrap_content" android:layout_height="2dp"/>

    <TextView
            android:id="@+id/add_moment"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Add Moment"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="#fff"/>

    <TextView android:layout_width="wrap_content" android:layout_height="2dp"/>

    <TextView
            android:id="@+id/search_moments"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Search"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="#fff"/>

</LinearLayout>